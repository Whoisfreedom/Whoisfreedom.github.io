.startGame
	font-size 100px
	color red
	position absolute
	top 50%
	left 50%
	transform translate(-50%,-50%)
.game 
	position fixed
	top 50%
	left 50%
	width 1000px
	text-align center
	line-height 260px
	font-size 80px
	color red
	transform translate(-50%,-50%)
	.role
		position absolute
		top 0
		width 200px
		height 260px
		background-repeat no-repeat
		background-position 0 50px
		border 1px solid rgb(201,201,201)
		&:hover 
			border-color orange
		&.darius
			left 0
			color blue 
			background-image url(../img/darius.png)
		&.garen
			right 0
			color red
			background-image url(../img/garen.png)
		h1
			position absolute
			top 10px
			left 0
			line-height 1
			text-align center
			font-size 20px
			font-weight bold
			width 100%
		.bloodMeter
			position absolute 
			top 40px
			left 0
			width 100%
			border 1px solid rgb(201,201,201)
			height 12px
			.meter 
				width 100%
				height 100%
				background-color green
		.showBlood
			position absolute
			top 60px
			left 50%
			font-size 20px
			font-weight bold
			color red
			opacity 0
			transform translateX(-50%)
			&.drop
				animation drop 1s forwards
		a 
			float left
			margin 240px 0 0 10px
			line-height 20px
			font-size 16px
			font-weight bold
			&:hover 
				color black
				font-size 20px
			&.current
				font-size 20px
::selection
	background-color transparent
@keyframes drop
	to
		opacity 1
		top 40px